%h2= I18n.t 'project.show'

%p
  %b= I18n.t 'project.title'
  = project.title
%p
  %b= I18n.t 'project.customer'
  = project.customer_name
%p
  %b= I18n.t 'project.status'
  = project.status
%p
  %b= I18n.t 'project.units'
  = project.units
%p
  %b= I18n.t 'project.price'
  = project.total_price
%p
  %b= I18n.t 'project.products'
  - project.products.each do |p|
    %div= project.price(p).to_s + " = " + p.description


= link_to I18n.t('shared.edit'), edit_project_path(project)
\|
= link_to I18n.t('shared.back'), projects_path
