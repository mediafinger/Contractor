= form_for customer do |f|
  - if customer.errors.any?
    #error_explanation
      %h2= "#{pluralize(customer.errors.count, "error")} prohibited this customer from being saved:"
      %ul
        - customer.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :email
    = f.text_field :email
  .field
    = f.label :active
    = f.check_box :active
  .actions
    = f.submit 'Save'
